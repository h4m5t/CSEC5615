apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-secure
  namespace: default
  labels:
    app: nginx-secure
spec:
  replicas: 2
  selector:
    matchLabels:
      app: nginx-secure
  template:
    metadata:
      labels:
        app: nginx-secure
    spec:
      securityContext:
        runAsNonRoot: true
        runAsUser: 1000
      containers:
      - name: nginx
        image: nginx:1.21-alpine
        securityContext:
          privileged: false
          allowPrivilegeEscalation: false
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: nginx-secure-service
  namespace: default
spec:
  selector:
    app: nginx-secure
  ports:
  - port: 80
    targetPort: 80